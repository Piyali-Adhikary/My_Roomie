<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/iv_back_contest_submit"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contest"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="10dp"/>
    </FrameLayout>



    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


       <EditText
           android:id="@+id/et_contest_submit"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/grey_eddittext"
           android:hint="Enter your text here"
           android:textSize="14sp"
           android:layout_margin="5dp"
           android:gravity="top|left"
           android:padding="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:padding="15dp">

        <Button
            android:id="@+id/btn_submit_contest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center" />

        <!-- <Button
             android:id="@+id/btn_refer_community_details"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Refer a Friend"
             android:textSize="15sp"
             android:textColor="@color/colorWhite"
             android:background="@color/colorPrimary"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:layout_gravity="center"
             android:visibility="gone"/>-->

    </LinearLayout>

</LinearLayout>
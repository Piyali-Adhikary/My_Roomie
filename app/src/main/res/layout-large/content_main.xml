<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity"
    tools:showIn="@layout/app_bar_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@mipmap/d_board_bg">


    <LinearLayout
        android:id="@+id/ll_student_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_service_request"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:clickable="false"
            android:focusable="false"
            android:padding="3dp"
            android:src="@mipmap/service_request" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:clickable="false"
            android:focusable="false"
            android:padding="3dp"
            android:src="@mipmap/community" />

        <ImageView
            android:id="@+id/iv_student_food_menu"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:clickable="false"
            android:focusable="false"
            android:padding="3dp"
            android:src="@mipmap/food_menu_dashboard" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp">

    <ImageView
        android:layout_weight="1"
        android:layout_width="188dp"
        android:layout_height="200dp"
        android:clickable="false"
        android:focusable="false"
        android:padding="3dp"
        android:src="@mipmap/payment_status" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_emergency"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|center">

        <ImageView
            android:layout_weight="1"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:clickable="false"
            android:focusable="false"
            android:padding="3dp"
            android:src="@mipmap/emergency" />

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_warden_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_attendance_warden"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:clickable="false"
                android:focusable="false"
                android:padding="3dp"
                android:src="@mipmap/attendance" />

            <ImageView
                android:id="@+id/iv_permission_warden"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:clickable="false"
                android:focusable="false"
                android:padding="3dp"
                android:src="@mipmap/permission" />

            <ImageView
                android:id="@+id/iv_foodmenu_warden"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:clickable="false"
                android:focusable="false"
                android:padding="3dp"
                android:src="@mipmap/food_menu_dashboard" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp">

            <ImageView
                android:id="@+id/iv_visitor_warden"
                android:layout_weight="1"
                android:layout_width="188dp"
                android:layout_height="200dp"
                android:clickable="false"
                android:focusable="false"
                android:padding="3dp"
                android:src="@mipmap/visitor_icon" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_parent_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_parent_permission_request"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:padding="3dp"
                android:src="@mipmap/permission" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:padding="3dp"
                android:src="@mipmap/payment_status" />

            <ImageView
                android:id="@+id/iv_foodmenu_list_parent"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:padding="3dp"
                android:src="@mipmap/food_menu_dashboard" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp">

            <ImageView
                android:id="@+id/iv_attendance_parent"
                android:layout_weight="1"
                android:layout_width="188dp"
                android:layout_height="200dp"
                android:clickable="false"
                android:focusable="false"
                android:padding="3dp"
                android:src="@mipmap/attendance" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

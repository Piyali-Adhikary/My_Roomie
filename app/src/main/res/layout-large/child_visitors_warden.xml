<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_child_student_newsletter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_room_no_child_visitor_warden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="Room No : "
                    android:gravity="left"
                    android:textSize="15sp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_date_child_visitor_warden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="18.04.2018"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:singleLine="true"/>


            </LinearLayout>


            <TextView

                android:id="@+id/tv_visitor_name_child_visitors_warden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="Visitor Name "
                android:gravity="left"
                android:textSize="15sp"
                android:singleLine="true"/>

            <TextView

                android:id="@+id/tv_visitor_ph_child_visitors_warden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Visitor's Contact : "
                android:gravity="left"
                android:textSize="15sp"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tv_student_name_child_visitor_warden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Student Name"
                android:gravity="left"
                android:textSize="15sp"
                android:singleLine="true"/>

            <TextView

                android:id="@+id/tv_relationship_child_visitors_warden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Relationship with student : "
                android:gravity="left"
                android:textSize="15sp"
                android:singleLine="true"/>

            <TextView

                android:id="@+id/tv_time_in_child_visitors_warden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Time-in : "
                android:gravity="left"
                android:textSize="15sp"
                android:singleLine="true"/>

            <TextView

                android:id="@+id/tv_time_out_child_visitors_warden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Time-out : "
                android:gravity="left"
                android:textSize="15sp"
                android:singleLine="true"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>